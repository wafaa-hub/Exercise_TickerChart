<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B8B8"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <fragment
            android:id="@+id/generalIndexFragement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:name="com.example.exercise.GeneralIndexFragment"
            ></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|left"
            android:padding="7dp"
            android:text="@string/companyName"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#B2B0AF" />

        <TextView
            android:id="@+id/askprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="1"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="@string/ask_price"
            android:textColor="#B2B0AF"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lastprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="@string/last_price"
            android:textColor="#B2B0AF"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/bidprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="@string/bid_price"
            android:textColor="#B2B0AF"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/highprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center|right"
            android:padding="7dp"
            android:text="@string/high_price"
            android:textColor="#B2B0AF"
            android:textStyle="bold"
            android:textSize="15sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/marketwatch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:background="#ffffff" />


    <fragment
        android:id="@+id/companyDetailsFragement"
        android:name="com.example.exercise.CompanyDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"></fragment>

</LinearLayout>

