<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"></FrameLayout>

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:background="#D3D3D3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/general_settings_label"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"></FrameLayout>

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_light_mode">

        </ImageView>

        <TextView
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/dark_theme"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"></FrameLayout>

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="60dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_language">

        </ImageView>

        <TextView
            android:id="@+id/switchLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/ar_language"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"></FrameLayout>

</LinearLayout>